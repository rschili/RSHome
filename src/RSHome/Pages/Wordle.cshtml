@page
@model WordleModel

<article>
<h1>Server-Side Wordle!</h1>
<p>You know the rules...</p>

<div class="grid">
    <div class="cell" style="background-color: #917d27;">H</div>
    <div class="cell" style="background-color: #417e3b;">O</div>
    <div class="cell">N</div>
    <div class="cell">E</div>
    <div class="cell">Y</div>
    <div class="cell">A</div>
    <div class="cell">U</div>
    <div class="cell">D</div>
    <div class="cell">I</div>
    <div class="cell">T</div>
</div>

@if (ModelState.ErrorCount > 0)
{
    <p style="color:crimson; margin:0 auto; text-align: center;">@ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage</p>
}

<form method="post">
    <fieldset>
    <input type="text" asp-for="Input" placeholder="input" autofocus/>
    <button type="submit">Try!</button>
    </fieldset>
</form>
</article>