@if (!ModelState.IsValid)
{
    <ul>
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
        {
            <li><del>@error.ErrorMessage</del></li>
        }
    </ul>
}
else if (!string.IsNullOrEmpty(Model.Message))
{
    <ins>Message: @Model.Message</ins>
}

